<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 5px;
    }
  </style>
  <title>Applications</title>
</head>
<div><%- include('partials/navbar', navdata) %> </div>
<body>
  <form action="/applications" method="GET">
    <p>Number of applications to be viewed</p> <input type="text" name="nrOfApplications"/>
    <button type="submit">View applications</button>
    <%if(applications[0]){%>
      <table>
        <tr>
          <th>Name</th>
          <th>Application</th>
          <th>Date Submitted</th>
        </tr>
        <%  for(var i=0; i < applications.length; i++) { %>
          <tr>
            <td><%= applications[i].name %></td>
            <td>Cover Letter</td>
            <td>01/01/2023</td>
          </tr>
        <% } %>
      </table>
    <% } %>
  
  <% /* Middleware function to check for 404 error */ %>
  <% function checkNotFound(req, res, next) { %>
    <% if (!req.route) { %>
      <% var err = new Error('Not Found'); %>
      <% err.status = 404; %>
      <% next(err); %>
    <% } else { %>
      <% next(); %>
    <% } %>
  <% } %>

  <% /* Use the middleware function */ %>
  <% app.use(checkNotFound); %>

</body>
</html>