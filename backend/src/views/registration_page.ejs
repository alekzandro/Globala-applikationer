<!DOCTYPE html>
<html lang="en">
    <head>
        <title> registration </title>
    </head>
    <%- include('partials/navbar', navbardata )%>
    <div>
        <h2> Registration page</h3>
    </div>
    <% if(status){ %>
        <div>
            <p>registering user <%= user %> <%= status %> </p>
        </div>
    <% }; %>
    <% if(causes){ %>
        <% causes?.map(msg => { %>
            <p style="color: red;"> *<%= msg %> </p>
        <% }) %>
    <% }; %>
    <body>
        <div>
            <form method="POST" action="/register">
                <p> Username: </p> <input type="text" name="username"/>
                <p> Password: </p> <input type="password" name="password"/>
                <p> Email: </p> <input type="text" name="email"/>
                <p> Person number: </p> <input type="text" name="pnr"/>
                <p> Name: </p> <input type="text" name="name"/>
                <p> Surname: </p> <input type="text" name="surname"/>
                <p> <input type="submit" value="Submit"/> </p>
            </form>
        </div>
    </body>

    <% try {
        if(status === 404) {
            throw new Error('404 Error: The page you are looking for does not exist.');
        } else if(status === 500) {
            throw new Error('500 Error: Internal Server Error.');
        } else if(status === 503) {
            throw new Error('503 Error: Service Unavailable.');
        } else if(status === 505) {
            throw new Error('505 Error: HTTP Version Not Supported.');
        }
    } catch (err) {
        next(err);
    } %>

</html>
